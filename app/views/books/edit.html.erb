<h1>Edit Book</h1>
<%= form_with(model: @book, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: true, value: @book.title %>
  </div>
  <div>
    <%= form.label :author %>
    <%= form.text_field :author, required: true, value: @book.author %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description, required: true, value: @book.description %>
  </div>
  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
