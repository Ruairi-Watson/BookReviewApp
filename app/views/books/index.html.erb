<!DOCTYPE html>
<html>
  <head>
    <title>Book List</title>
    <style>
      body {
        font-family: "Times New Roman", serif;
        background-color: #f5f0e1;
        color: #5a4635;
        margin: 0;
        padding: 0;
      }
      .container {
        margin: 20px auto;
        max-width: 1200px;
        background: #fff8e7;
        padding: 20px;
        border-radius: 10px;
        border: 2px solid #8b5e3b;
      }
      h2 {
        text-align: center;
        color: #4a3623;
      }
      .btn {
        padding: 8px 12px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
        margin-right: 5px;
      }
      .btn-primary {
        background-color: #7b3f00;
        color: #fff;
      }
      .btn-secondary {
        background-color: #b3742f;
        color: #fff;
      }
      .btn-danger {
        background-color: #b22222;
        color: #fff;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ccc;
      }
      th {
        background-color: #8b5e3b;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Books</h2>
      <%= link_to 'Add Book', new_book_path, class: 'btn btn-primary' %>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= truncate(book.description, length: 100) %></td>
              <td>
                <%= link_to 'Show', book_path(book), class: 'btn btn-primary' %>
                <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-secondary' %>
                <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>
