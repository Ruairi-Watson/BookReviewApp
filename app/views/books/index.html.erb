<h2>Books</h2>
<%= link_to "Add Book", new_book_path, class: "btn btn-dark mb-3" %>

<ul class="list-group">
  <% @books.each do |book| %>
    <li class="list-group-item">
      <strong>Title:</strong> <%= book.title %> <br>
      <strong>Author:</strong> <%= book.author %> <br>
      <strong>Description:</strong> <%= book.description %>
      <div class="mt-2">
        <%= link_to "Edit", edit_book_path(book), class: "btn btn-dark btn-sm" %>
        <%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
      </div>
    </li>
  <% end %>
</ul>
